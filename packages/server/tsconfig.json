{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": false
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}